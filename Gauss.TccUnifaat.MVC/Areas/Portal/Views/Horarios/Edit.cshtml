@model Gauss.TccUnifaat.Common.Models.Horario

@{
    var pageName = "Editar";
    ViewData["Title"] = pageName;
    ViewData["Category1"] = "Horários";
}

<div class="container-fluid mt-3">

    <div class="card mb-4">
        <div class="card-header">
            <h1>@pageName</h1>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="HorarioId" />
                <div class="form-group mt-3" style="display: none">
                    <label asp-for="UsuarioId" class="control-label"></label>
                    <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId"></select>
                    <span asp-validation-for="UsuarioId" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="DisciplinaId" class="control-label"></label>
                    <select asp-for="DisciplinaId" class="form-control" asp-items="ViewBag.DisciplinaId"></select>
                    <span asp-validation-for="DisciplinaId" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="DataAula" class="control-label"></label>
                    <input asp-for="DataAula" class="form-control" />
                    <span asp-validation-for="DataAula" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Salvar" class="btn btn-secondary" />
                    <a class="btn btn-outline-secondary" asp-action="Index">Voltar para lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
