@model Gauss.TccUnifaat.Common.Models.Horario

@{
    var pageName = "Cadastrar";
    ViewData["Title"] = pageName;
    ViewData["Category1"] = "Horários";
    ViewData["Heading"] = "Horário: <span class='fw-300'>Cadastrar</span>";
}

<div class="container-fluid mt-3">

    <div class="card mb-4">
        <div class="card-header">
            <h5>@pageName</h5>
        </div>
        <div class="card-body">

            <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-3">
                <label asp-for="DisciplinaId" class="control-label"></label>
                <select asp-for="DisciplinaId" class ="form-control" asp-items="ViewBag.DisciplinaId"></select>
            </div>
            <div class="form-group mt-3">
                <label asp-for="DataAula" class="control-label"></label>
                <input asp-for="DataAula" class="form-control" />
                <span asp-validation-for="DataAula" class="text-danger"></span>
            </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Salvar" class="btn btn-secondary" />
                    <a class="btn btn-outline-secondary" asp-action="Index">Voltar para lista</a>
                </div>
        </form>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
