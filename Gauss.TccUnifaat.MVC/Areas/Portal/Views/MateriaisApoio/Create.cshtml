@model Gauss.TccUnifaat.Common.Models.MaterialApoio

@{
    var pageName = "Cadastrar";
    ViewData["Title"] = pageName;
    ViewData["Category1"] = "Material de apoio";
    ViewData["Heading"] = "Material de apoio: <span class='fw-300'>Cadastrar</span>";
}

<div class="container-fluid mt-3">

    <div class="card mb-4">
        <div class="card-header">
            <h5>@pageName</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mt-3">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Descricao" class="control-label"></label>
                    <input asp-for="Descricao" class="form-control" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Arquivo" class="control-label"></label>
                    <input class="form-control" type="file" name="anexo" id="formFile" />
                    <span asp-validation-for="Arquivo" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="DisciplinaId" class="control-label"></label>
                    <select asp-for="DisciplinaId" class="form-control" asp-items="ViewBag.DisciplinaId"></select>
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Salvar" class="btn btn-secondary" />
                    <a class="btn btn-outline-secondary" asp-action="Index">Voltar para lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
