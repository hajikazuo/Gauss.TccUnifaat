@model List<Presenca>

<h1>Lista de Presenças</h1>

<div class="p-3">

    <form method="get" class="mb-3">
        <div class="form-group">
            <label for="dataFiltro">Selecione a data:</label>
            <input type="date" id="dataFiltro" name="dataFiltro" value="@ViewBag.DataFiltro.ToString("yyyy-MM-dd")">
            <button type="submit" class="btn btn-primary">Filtrar</button>
        </div>
    </form>

    <p>Data Atual: @ViewBag.DataAtual.ToString("dd/MM/yyyy")</p>
    <p>Data do Filtro: @ViewBag.DataFiltro.ToString("dd/MM/yyyy")</p>

    <table class="table">
        <thead>
            <tr>
                <th>Data da Aula</th>
                <th>Nome do Aluno</th>
                <th>Presente</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var presenca in Model)
            {
                <tr>
                    <td>@presenca.DataAula.ToString("dd/MM/yyyy")</td>
                    <td>@presenca.Usuario.NomeCompleto</td>
                    <td>@(presenca.Presente ? "Sim" : "Não")</td>
                </tr>
            }
        </tbody>
    </table>

</div>
