@model Gauss.TccUnifaat.Common.Models.Aviso
@{
    var pageName = "Cadastrar";
    ViewData["Title"] = pageName;
    ViewData["Category1"] = "Avisos";
    ViewData["Heading"] = "Aviso: <span class='fw-300'>Cadastrar</span>";
}

<div class="container-fluid mt-3">

    <div class="card mb-4">
        <div class="card-header">
            <h1>@pageName</h1>
        </div>
        <div class="card-body">

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mt-3">
                    <label asp-for="Titulo" class="control-label"></label>
                    <input asp-for="Titulo" class="form-control" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Descricao" class="control-label"></label>
                    <input asp-for="Descricao" class="form-control" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="DataAviso" class="control-label"></label>
                    <input asp-for="DataAviso" class="form-control" />
                    <span asp-validation-for="DataAviso" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="TurmaId" class="control-label"></label>
                    <select asp-for="TurmaId" class="form-control" asp-items="ViewBag.TurmaId"></select>
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Salvar" class="btn btn-secondary" />
                    <a class="btn btn-outline-secondary" asp-action="Index">Voltar para lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
