@model Gauss.TccUnifaat.Common.Models.Aviso

@{
    var pageName = "Detalhes";
    ViewData["Title"] = pageName;
    ViewData["Category1"] = "Avisos";
    ViewData["Heading"] = "Aviso: <span class='fw-300'>Detalhes</span>";
}

<div class="container-fluid mt-3">

    <div class="card mb-4">
        <div class="card-header">
            <h1>@pageName</h1>
        </div>
        <div class="card-body">

            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Titulo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Titulo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Descricao)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Descricao)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DataAviso)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DataAviso)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Turma)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Turma.Nome)
                </dd>
            </dl>

            <div>
                <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@Model?.AvisoId">Editar</a>
                <a class="btn btn-outline-secondary" asp-action="Index">Voltar para a lista</a>
            </div>
        </div>
    </div>
</div>
