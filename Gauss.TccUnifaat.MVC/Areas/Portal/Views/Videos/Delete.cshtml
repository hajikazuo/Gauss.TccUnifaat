@model Gauss.TccUnifaat.Common.Models.Video

@{
    var pageName = "Deletar";
    ViewData["Title"] = pageName;
}

<div class="container-fluid mt-3">

    <div class="card mb-4">
        <div class="card-header">
            <h1>@pageName</h1>
        </div>
        <div class="card-body">

            <h3 class="text-danger py-3">Você tem certeza que deseja deletar?</h3>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Titulo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Titulo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.LinkYouTube)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.LinkYouTube)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Disciplina)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Disciplina.Nome)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DataCadastro)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DataCadastro)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="VideoId" />
                <input type="submit" value="Deletar" class="btn btn-danger" />
                <a class="btn btn-outline-secondary" asp-action="Index">Voltar para a lista</a>
            </form>
        </div>
    </div>
</div>
