@model Gauss.TccUnifaat.Common.Models.Video

@{
    var pageName = "Detalhes";
    ViewData["Title"] = pageName;
    ViewData["Category1"] = "GaussTube";
    ViewData["Heading"] = "Vídeo: <span class='fw-300'>Detalhes</span>";
}

<div class="container-fluid mt-3">

    <div class="card mb-4">
        <div class="card-header">
            <h5>@pageName</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Titulo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Titulo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.LinkYouTube)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.LinkYouTube)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Disciplina)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Disciplina.Nome)
                </dd>
            </dl>
            <div>
                <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@Model?.VideoId">Editar</a>
                <a class="btn btn-outline-secondary" asp-action="Index">Voltar para a lista</a>
            </div>
        </div>
    </div>
</div>

