@using Gauss.TccUnifaat.Common.Extensions;
@using Gauss.TccUnifaat.MVC.Dapper;
@model IEnumerable<UsuariosViewModel>

@{
    var pageName = "Lista de usuários";
    ViewData["Title"] = pageName;
    ViewData["Category1"] = "Usuários";
    ViewData["Heading"] = "Usuários: <span class='fw-300'>Listagem</span>";
}

<partial name="_MensagemPartial" />

<div class="container-fluid mt-3">

    <div class="card mb-4">
        <div class="card-header">
            <h1>@pageName</h1>
        </div>
        <div class="card-body">

            <p>
                <a class="btn btn-secondary" asp-action="Register">Cadastrar novo</a>
            </p>

            <table id="myTable" class="table table-bordered">
                <thead>
                    <tr>
                        <th>Nome Completo</th>
                        <th>Telefone</th>
                        <th>Email</th>
                        <th>Turma</th>
                        <th>Função</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var usuario in Model)
                    {
                        <tr>
                            <td>@usuario.NomeCompleto</td>
                            <td>@usuario.Telefone</td>
                            <td>@usuario.Email</td>
                            <td>@usuario.Turma</td>
                            <td>@usuario.Funcao</td>
                            <td>
                                <div class="btn-group">
                                    <a asp-action="Details" asp-route-id="@usuario.Id" class="btn btn-primary"><i class="fa-solid fa-circle-info"></i></a>
                                    <a asp-action="Register" asp-route-id="@usuario.Id" class="btn btn-secondary"><i class="fa-solid fa-pen-to-square"></i></a>
                                    <a asp-action="Delete" asp-route-id="@usuario.Id" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>                                   
                                </div>

                                
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>
