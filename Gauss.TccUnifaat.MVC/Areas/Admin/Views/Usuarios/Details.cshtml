@model Gauss.TccUnifaat.Common.Models.Usuario

@{
    var pageName = "Detalhes";
    ViewData["Title"] = pageName;
    ViewData["Category1"] = "Usuários";
}

<div class="container-fluid mt-3">

    <button class="mb-3 btn btn-secondary d-print-none" onclick="GerarPDF()">Gerar PDF</button>

    <div class="card mb-4">
        <div class="card-header">
            <h1><img class="logo" src="~/img/logo.png" /></h1>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col">
                    <h4>Informações Pessoais</h4>
                    <hr>
                    <p><strong>Nome Completo:</strong> @Model.NomeCompleto</p>
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Telefone:</strong> @Model.Telefone</p>
                    <p><strong>Idade:</strong> @Model.Idade</p>
                    <p><strong>CPF:</strong> @Model.Cpf</p>
                    <p><strong>Data de Nascimento:</strong> @Model.DataNascimento.ToString("dd'/'MM'/'yyyy")</p>
                </div>
            </div>

        </div>
    </div>
</div>

<script>
    function GerarPDF() {
        window.print()
    }
</script>