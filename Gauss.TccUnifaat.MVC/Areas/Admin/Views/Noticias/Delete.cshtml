@model Gauss.TccUnifaat.Common.Models.Noticia

@{
    var pageName = "Deletar";
    ViewData["Title"] = pageName;
}

<div class="container-fluid mt-3">

    <div class="card mb-4">
        <div class="card-header">
            <h1>@pageName</h1>
        </div>
        <div class="card-body">

            <h3 class="text-danger py-3">Você tem certeza que deseja deletar?</h3>

            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.TipoNoticia)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TipoNoticia)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Titulo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Titulo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Conteudo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Conteudo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DataCadastro)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DataCadastro)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Foto)
                </dt>
                <dd class="col-sm-10">
                    <img src="~/imgNoticias/@Model.Foto" width="50" alt="Imagem da Notícia" />
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Usuario)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Usuario.NomeCompleto)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="NoticiaId" />
                <div class="form-group">
                    <input type="submit" value="Deletar" class="btn btn-danger" />
                    <a class="btn btn-outline-secondary" asp-action="Index">Voltar para a lista</a>
                </div>
            </form>
        </div>
    </div>
</div>