@model Gauss.TccUnifaat.Common.Models.Noticia

@{
    var pageName = "Detalhes";
    ViewData["Title"] = pageName;
    ViewData["Category1"] = "Notícias";
    ViewData["Heading"] = "Notícia: <span class='fw-300'>Detalhes</span>";
}

<div class="container-fluid mt-3">

    <div class="card mb-4">
        <div class="card-header">
            <h5>@pageName</h5>
        </div>
        <div class="card-body">

            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.TipoNoticia)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TipoNoticia)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Titulo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Titulo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Conteudo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Conteudo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DataCadastro)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DataCadastro)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Foto)
                </dt>
                <dd class="col-sm-10">
                    @if (@Model.TipoNoticia == TipoNoticia.NoticiaAPI)
                    {
                        <img src="@Model.Foto" width="50" alt="Imagem da Notícia" />
                    }
                    else
                    {
                        <img src="~/imgNoticias/@Model.Foto" width="50" alt="Imagem da Notícia" />
                    }
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Usuario)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Usuario.NomeCompleto)
                </dd>
            </dl>
            <div>
                <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@Model?.NoticiaId">Editar</a>
                <a class="btn btn-outline-secondary" asp-action="Index">Voltar para a lista</a>
            </div>
        </div>
    </div>
</div>

