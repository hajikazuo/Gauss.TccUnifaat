@model IEnumerable<Gauss.TccUnifaat.Common.Models.Disciplina>

@{
    var pageName = "Index";
    ViewData["Title"] = pageName;
}

<div class="container-fluid mt-3">

    <div class="card mb-4">
        <div class="card-header">
            <h1>@pageName</h1>
        </div>
        <div class="card-body">


            <p>
                <a class="btn btn-secondary" asp-action="Create">Cadastrar nova</a>
            </p>
            <table id="myTable" class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Nome)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Turma)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DataCadastro)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Turma.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DataCadastro)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.DisciplinaId">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.DisciplinaId">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.DisciplinaId">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>