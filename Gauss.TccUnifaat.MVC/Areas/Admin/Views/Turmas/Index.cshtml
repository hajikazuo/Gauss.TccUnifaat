@model IEnumerable<Gauss.TccUnifaat.Common.Models.Turma>

@{
    ViewData["Title"] = "Index";
}

<div class="p-3">

    <h1>Turmas</h1>

    <p>
        <a class="btn btn-dark" asp-action="Create">Cadastrar turma</a>
    </p>
    <table id="myTable" class="table table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                Configurações
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@item.TurmaId">Editar turma</a></li>
                                <li><a class="dropdown-item" asp-action="Details" asp-route-id="@item.TurmaId">Acessar turma</a></li>
                                <li><a class="dropdown-item" asp-action="Delete" asp-route-id="@item.TurmaId">Excluir</a></li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>