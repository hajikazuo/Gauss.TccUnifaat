<div class="container card-container">
    <h1 class="title">Notícias</h1>
    <div class="row">
        @foreach (var noticia in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="@noticia.UrlImagem" class="card-img-top" alt="Imagem da Notícia">
                    <div class="card-body">
                        <h5 class="card-title">@noticia.Titulo</h5>
                        <p class="card-text">@noticia.Conteudo</p>
                        <p class="card-text"><small class="text-muted">@noticia.DataCadastro.ToString("dd/MM/yyyy")</small></p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

